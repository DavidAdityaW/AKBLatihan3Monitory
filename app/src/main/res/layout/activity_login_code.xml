<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitethree"
    tools:context=".LoginCodeActivity">

    <RelativeLayout
        android:id="@+id/relayTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Keluarga"
                android:textSize="28sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ketikkan kode keluarga yang Ayah Bunda \nmiliki disini"
                android:textSize="15sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/blackthree" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:gravity="center"
                android:text="A1B2C3"
                android:textSize="18sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/blackthree"
                android:background="@drawable/bg_edittext" />

            <TextView
                android:id="@+id/tvKebijakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="30dp"
                android:text="Dengan menekan tombol masuk berarti Anda menyetujui \nKetentuan Pengguna dan Kebijakan Data kami"
                android:gravity="center"
                android:textSize="10sp"
                android:fontFamily="@font/rubik_regular"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnMasuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_btn_yellow"
                android:text="Masuk"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/black"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relayBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="20dp"
        android:paddingVertical="40dp"
        android:paddingHorizontal="35dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvBelumPunya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Belum punya kode keluarga?"
                android:gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/rubik_regular"
                android:textColor="@color/brown_grey" />

            <Button
                android:id="@+id/btnBeli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_btn_purple"
                android:text="Beli Kode Keluarga Disini"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/whitethree"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>